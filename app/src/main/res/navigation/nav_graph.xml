<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/splashFragment">

    <fragment
            android:id="@+id/splashFragment"
            android:name="com.project.template.ui.main.SplashFragment"
            android:label="SplashFragment"
            tools:layout="@layout/fragment_splash">
        <action
                android:id="@+id/action_Splash_to_LoginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@id/splashFragment"
                app:popUpToInclusive="true"/>
    </fragment>

    <fragment
            android:id="@+id/loginFragment"
            android:name="com.project.template.ui.main.LoginFragment"
            android:label="LoginFragment"
            tools:layout="@layout/fragment_login">

        <action
                android:id="@+id/action_Login_to_RegistrationFragment"
                app:destination="@id/registrationFragment"
                app:popUpToInclusive="true"/>

        <action
                android:id="@+id/action_Login_to_UserFragment"
                app:destination="@id/userFragment"
                app:popUpTo="@id/loginFragment"
                app:popUpToInclusive="true"/>
    </fragment>

    <fragment
            android:id="@+id/registrationFragment"
            android:name="com.project.template.ui.main.RegistrationFragment"
            android:label="RegistrationFragment"
            tools:layout="@layout/fragment_registration">

        <action
                android:id="@+id/action_Registration_to_LoginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@id/registrationFragment"
                app:popUpToInclusive="true"/>

        <action
                android:id="@+id/action_Registration_to_UserFragment"
                app:destination="@id/userFragment"
                app:popUpTo="@id/registrationFragment"
                app:popUpToInclusive="true"/>
    </fragment>

    <fragment
            android:id="@+id/userFragment"
            android:name="com.project.template.ui.user.UserFragment"
            android:label="UserFragment"
            tools:layout="@layout/fragment_user"/>

</navigation>